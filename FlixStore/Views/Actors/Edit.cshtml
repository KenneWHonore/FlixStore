@model Actor

@{
    ViewData["Title"] = "Update Actor";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Inter', sans-serif;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    input.form-control,
    textarea.form-control {
        border-radius: 0.3rem;
        border: 1px solid #ced4da;
        transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        input.form-control:focus,
        textarea.form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgb(13 110 253 / 0.25);
        }

    .img-preview {
        max-height: 250px;
        border-radius: 0.3rem;
        box-shadow: 0 4px 6px rgb(0 0 0 / 0.1);
        object-fit: cover;
        width: 100%;
    }

    .btn-success {
        font-weight: 600;
        padding: 0.5rem 1.25rem;
        border-radius: 0.35rem;
    }

    .btn-outline-secondary {
        border-radius: 0.35rem;
        padding: 0.5rem 1.25rem;
    }

    h2 {
        font-weight: 700;
    }

    .text-primary {
        color: #0d6efd !important;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <h2 class="text-center mb-4 text-primary">🎭 Update Actor</h2>
            <p class="text-center text-muted mb-5 fs-5">
                Please update the information below to modify the details of this actor in the database.
            </p>

            <form asp-action="Edit" method="post" novalidate>
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="row gx-4 gy-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Bio" class="form-label"></label>
                            <textarea asp-for="Bio" class="form-control" rows="5" placeholder="Brief biography..."></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ProfilePictureURL" class="form-label"></label>
                            <input asp-for="ProfilePictureURL" class="form-control" id="ProfilePictureURL" placeholder="Profile Picture URL" />
                            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                        </div>

                        <div class="text-center mb-3">
                            <img id="ProfilePicturePreview" src="@(!string.IsNullOrEmpty(Model.ProfilePictureURL) ? Model.ProfilePictureURL : "https://via.placeholder.com/400x250?text=No+Image")" alt="Image preview" class="img-preview" />
                        </div>
                    </div>

                    <div class="col-12 d-flex justify-content-between mt-4">
                        <a class="btn btn-outline-secondary" asp-action="Index">← Show all</a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-pencil-square me-1"></i> Update
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const preview = document.getElementById('ProfilePicturePreview');
            preview.src = $("#ProfilePictureURL").val() || 'https://via.placeholder.com/400x250?text=No+Image';
        });

        $("#ProfilePictureURL").on("input", function () {
            const output = document.getElementById("ProfilePicturePreview");
            output.src = $(this).val() || 'https://via.placeholder.com/400x250?text=No+Image';
        });
    </script>
}
