@model NewMovieVM
@using FlixStore.Data
@using FlixStore.Data.Enums

@{
    ViewData["Title"] = "Update movie";
}


<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Inter', sans-serif;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    input.form-control,
    select.form-control,
    textarea.form-control {
        border-radius: 0.3rem;
        border: 1px solid #ced4da;
        transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        input.form-control:focus,
        select.form-control:focus,
        textarea.form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgb(13 110 253 / 0.25);
        }

    .img-preview {
        max-height: 250px;
        border-radius: 0.3rem;
        box-shadow: 0 4px 6px rgb(0 0 0 / 0.1);
        object-fit: cover;
        width: 100%;
    }

    .btn-success {
        font-weight: 600;
        padding: 0.5rem 1.25rem;
        border-radius: 0.35rem;
    }

    .btn-outline-secondary {
        border-radius: 0.35rem;
        padding: 0.5rem 1.25rem;
    }

    h2 {
        font-weight: 700;
    }

    .text-primary {
        color: #0d6efd !important;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    /* Validation error style */
    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <h2 class="text-center mb-4 text-primary">🎬 Update Movie</h2>
            <p class="text-center text-muted mb-5 fs-5">
                Fill out the form below to update the movie in the database.
            </p>

            <form asp-action="Edit" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                <div class="row gx-4 gy-4">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Movie Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" placeholder="Price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ImageURL" class="form-label"></label>
                            <input asp-for="ImageURL" class="form-control" id="ImageURL" placeholder="Image URL" />
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>

                        <div class="text-center mb-3">
                            <img id="ImageUrlPreview" src="@Model.ImageURL" alt="Image preview" class="img-preview" />
                        </div>

                        <div class="form-group">
                            <label asp-for="VideoURL" class="form-label"></label>
                            <input asp-for="VideoURL" class="form-control" id="VideoURL" placeholder="Video URL" />
                            <span asp-validation-for="VideoURL" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CinemaId" class="form-label"></label>
                            <select asp-for="CinemaId" class="form-control" asp-items="ViewBag.Cinemas"></select>
                            <span asp-validation-for="CinemaId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MovieCategory" class="form-label"></label>
                            <select asp-for="MovieCategory" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                            <span asp-validation-for="MovieCategory" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ProducerId" class="form-label"></label>
                            <select asp-for="ProducerId" class="form-control" asp-items="ViewBag.Producers"></select>
                            <span asp-validation-for="ProducerId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ActorIds" class="form-label"></label>
                            <select asp-for="ActorIds" class="form-control" asp-items="ViewBag.Actors" multiple></select>
                            <span asp-validation-for="ActorIds" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Brief description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 d-flex justify-content-between mt-4">
                        <a class="btn btn-outline-secondary" asp-action="Index">← Show all</a>
                        <button type="submit" class="btn btn-success"><i class="bi bi-plus-circle me-1"></i> Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ImageURL").val() || '@Model.ImageURL';
        });

        $("#ImageURL").on("input", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val() || 'https://via.placeholder.com/400x250?text=No+Image';
        });
    </script>
}
