@model Cinema

@{
    ViewData["Title"] = "Delete Cinema";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Inter', sans-serif;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    input.form-control,
    textarea.form-control {
        border-radius: 0.3rem;
        border: 1px solid #ced4da;
        background-color: #f8f9fa;
    }

    .img-preview {
        max-height: 250px;
        border-radius: 0.3rem;
        box-shadow: 0 4px 6px rgb(0 0 0 / 0.1);
        object-fit: cover;
        width: 100%;
    }

    h2 {
        font-weight: 700;
    }

    .text-primary {
        color: #0d6efd !important;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .btn {
        padding: 0.5rem 1.25rem;
        border-radius: 0.35rem;
        font-weight: 600;
    }

    .btn-outline-secondary {
        color: #6c757d;
    }

    .btn-danger {
        color: #fff;
        background-color: #dc3545;
        border: none;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            @* <h2 class="text-center mb-4 text-danger">⚠️ Delete Confirmation: @Model.Name</h2> *@
            <p class="text-center text-muted mb-5 fs-5">
                This action is irreversible. Please confirm if you want to permanently delete this cinema.
            </p>

            <div class="row gx-4 gy-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="5" readonly></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Logo" class="form-label"></label>
                        <input asp-for="Logo" class="form-control" id="Logo" readonly />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>

                    <div class="text-center mb-3">
                        <img id="LogoPreview" src="@(!string.IsNullOrEmpty(Model.Logo) ? Model.Logo : "https://via.placeholder.com/400x250?text=No+Image")" alt="Logo preview" class="img-preview" />
                    </div>
                </div>

                <div class="col-12 d-flex justify-content-between mt-4">
                    <a class="btn btn-outline-secondary" asp-action="Index">← Show All</a>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const preview = document.getElementById('LogoPreview');
            preview.src = $("#Logo").val() || 'https://via.placeholder.com/400x250?text=No+Image';
        });
    </script>
}
