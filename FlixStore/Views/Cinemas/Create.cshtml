@model Cinema

@{
    ViewData["Title"] = "Add a new Cinema";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Inter', sans-serif;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    input.form-control,
    textarea.form-control {
        border-radius: 0.3rem;
        border: 1px solid #ced4da;
        transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        input.form-control:focus,
        textarea.form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgb(13 110 253 / 0.25);
        }

    .img-preview {
        max-height: 250px;
        border-radius: 0.3rem;
        box-shadow: 0 4px 6px rgb(0 0 0 / 0.1);
        object-fit: cover;
        width: 100%;
    }

    .btn-success {
        font-weight: 600;
        padding: 0.5rem 1.25rem;
        border-radius: 0.35rem;
    }

    .btn-outline-secondary {
        border-radius: 0.35rem;
        padding: 0.5rem 1.25rem;
    }

    h2 {
        font-weight: 700;
    }

    .text-primary {
        color: #0d6efd !important;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <h2 class="text-center mb-4 text-primary">🎬 Add a New Cinema</h2>
            <p class="text-center text-muted mb-5 fs-5">
                Please fill out the form below to add a new cinema to the database.
            </p>

            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="row gx-4 gy-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Cinema name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Short description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Logo" class="form-label"></label>
                            <input asp-for="Logo" class="form-control" id="Logo" placeholder="Logo URL" />
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>

                        <div class="text-center mb-3">
                            <img id="CinemaLogoPreview" src="https://via.placeholder.com/400x250?text=No+Image" alt="Logo preview" class="img-preview" />
                        </div>
                    </div>

                    <div class="col-12 d-flex justify-content-between mt-4">
                        <a class="btn btn-outline-secondary" asp-action="Index">← Show All</a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-plus-circle me-1"></i> Create
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const preview = document.getElementById('CinemaLogoPreview');
            preview.src = $("#Logo").val() || 'https://via.placeholder.com/400x250?text=No+Image';
        });

        $("#Logo").on("input", function () {
            const output = document.getElementById("CinemaLogoPreview");
            output.src = $(this).val() || 'https://via.placeholder.com/400x250?text=No+Image';
        });
    </script>
}
