@model FlixStore.Data.ViewModels.LoginVM

@{
    ViewData["Title"] = "Log in to your account";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f9f9f9;
    }

    .login-card {
        max-width: 480px;
        margin: 60px auto;
        background-color: #fff;
        border-radius: 12px;
        padding: 36px 40px;
        box-shadow: 0 14px 40px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

        .login-card:hover {
            box-shadow: 0 18px 48px rgba(0, 0, 0, 0.15);
            transform: translateY(-4px);
        }

    h4 {
        font-weight: 700;
        color: #198754; /* Texte en vert */
        margin-bottom: 6px;
        text-align: center;
    }

    .subtext {
        font-weight: 400;
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 28px;
        text-align: center;
    }

    label {
        display: block;
        font-weight: 600;
        margin-bottom: 6px;
        color: #444;
    }

    input.form-control {
        height: 44px;
        border-radius: 8px;
        border: 1.8px solid #ddd;
        padding: 0 14px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        width: 100%;
        box-sizing: border-box;
    }

        input.form-control::placeholder {
            color: #999;
            font-style: italic;
            font-weight: 400;
        }

        input.form-control:focus {
            border-color: #198754;
            box-shadow: 0 0 8px rgba(25, 135, 84, 0.3);
            outline: none;
        }

    .btn-login {
        width: 100%;
        background-color: transparent; /* Pas de fond */
        border: 2px solid #198754; /* Bordure verte */
        padding: 12px 0;
        font-size: 1.1rem;
        font-weight: 700;
        color: #198754; /* Texte vert */
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease, color 0.3s ease;
        margin-top: 18px;
    }

        .btn-login:hover {
            background-color: #198754; /* Fond vert au hover */
            color: white; /* Texte blanc au hover */
            border-color: #198754;
        }

    .validation-message, .text-danger {
        color: #dc3545;
        font-size: 0.9rem;
        margin-top: -12px;
        margin-bottom: 12px;
        display: block;
    }

    p.forgot-password {
        margin-top: 10px;
        text-align: center;
    }

        p.forgot-password a {
            font-size: 0.9rem;
            color: #198754;
            font-weight: 600;
            text-decoration: none;
        }

            p.forgot-password a:hover {
                text-decoration: underline;
            }
</style>

<div class="login-card">
    <h4>Log in to your account</h4>
    <p class="subtext">Welcome back! Please enter your credentials to continue.</p>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <strong>Sorry!</strong> @TempData["Error"]
        </div>
    }

    <form asp-action="Login" method="post" novalidate>
        <div>
            <label asp-for="EmailAdress">Email address</label>
            <input asp-for="EmailAdress" class="form-control" placeholder="exemple@gmail.com" />
            <span asp-validation-for="EmailAdress" class="validation-message"></span>
        </div>

        <div style="margin-top: 16px;">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="validation-message"></span>
        </div>

        <button type="submit" class="btn-login">Log in</button>

        @* Suppression du bouton Cancel et de la ligne *@
    </form>
</div>
