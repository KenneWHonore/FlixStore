@using FlixStore.Data.ViewModels;
@model LoginVM;

@{
    ViewData["Title"] = "Log in to your account";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f9f9f9;
    }

    .login-card {
        max-width: 480px;
        margin: 60px auto;
        background-color: #fff;
        border-radius: 12px;
        padding: 36px 40px;
        box-shadow: 0 14px 40px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

        .login-card:hover {
            box-shadow: 0 18px 48px rgba(0, 0, 0, 0.15);
            transform: translateY(-4px);
        }

    h4 {
        font-weight: 700;
        color: #222;
        margin-bottom: 6px;
    }

    .subtext {
        font-weight: 400;
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 28px;
    }

    label {
        display: block;
        font-weight: 600;
        margin-bottom: 6px;
        color: #444;
    }

    input.form-control {
        height: 44px;
        border-radius: 8px;
        border: 1.8px solid #ddd;
        padding: 0 14px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        input.form-control::placeholder {
            color: #999;
            font-style: italic;
            font-weight: 400;
        }

        input.form-control:focus {
            border-color: #198754;
            box-shadow: 0 0 8px rgba(25, 135, 84, 0.3);
            outline: none;
        }

    .btn-login {
        width: 100%;
        background-color: #198754;
        border: none;
        padding: 12px 0;
        font-size: 1.1rem;
        font-weight: 700;
        color: white;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 18px;
    }

        .btn-login:hover {
            background-color: #146c43;
        }

    .cancel-link {
        display: block;
        text-align: center;
        margin-top: 14px;
        color: #0d6efd;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        font-size: 0.95rem;
        transition: color 0.25s ease;
    }

        .cancel-link:hover {
            color: #084298;
            text-decoration: underline;
        }

    .alert-danger {
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        padding: 10px 14px;
        margin-bottom: 16px;
    }
</style>

<div class="login-card">
    <h4 style="text-align: center;">Log in to your account</h4>
    <p class="subtext">Welcome back! Please enter your credentials to continue.</p>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <strong>Sorry!</strong> @TempData["Error"]
        </div>
    }

    <form asp-action="Login" novalidate>
        <div>
            <label asp-for="EmailAdress">Email address</label>
            <input asp-for="EmailAdress" class="form-control" placeholder="exemple@gmail.com" />
            <span asp-validation-for="EmailAdress" class="text-danger"></span>
        </div>

        <div style="margin-top: 16px;">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-login">Log in</button>

        <a asp-controller="Movies" asp-action="Index" class="cancel-link">Cancel</a>
    </form>
</div>
