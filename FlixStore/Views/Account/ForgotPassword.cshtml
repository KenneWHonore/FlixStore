@model FlixStore.Data.ViewModels.ForgotPasswordVM

@{
    ViewData["Title"] = "Forgot Password";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<style>
    /* Même CSS que pour la vue Login */
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f9f9f9;
    }

    .login-card {
        max-width: 480px;
        margin: 60px auto;
        background-color: #fff;
        border-radius: 12px;
        padding: 36px 40px;
        box-shadow: 0 14px 40px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

        .login-card:hover {
            box-shadow: 0 18px 48px rgba(0, 0, 0, 0.15);
            transform: translateY(-4px);
        }

    h4 {
        font-weight: 700;
        color: #222;
        margin-bottom: 6px;
        text-align: center;
    }

    .subtext {
        font-weight: 400;
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 28px;
        text-align: center;
    }

    label {
        display: block;
        font-weight: 600;
        margin-bottom: 6px;
        color: #444;
    }

    input.form-control {
        height: 44px;
        border-radius: 8px;
        border: 1.8px solid #ddd;
        padding: 0 14px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        width: 100%;
        box-sizing: border-box;
    }

        input.form-control::placeholder {
            color: #999;
            font-style: italic;
            font-weight: 400;
        }

        input.form-control:focus {
            border-color: #198754;
            box-shadow: 0 0 8px rgba(25, 135, 84, 0.3);
            outline: none;
        }

    .btn-login {
        width: 100%;
        background-color: #198754;
        border: none;
        padding: 12px 0;
        font-size: 1.1rem;
        font-weight: 700;
        color: white;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 18px;
    }

        .btn-login:hover {
            background-color: #146c43;
        }

    .validation-message, .text-danger {
        color: #dc3545;
        font-size: 0.9rem;
        margin-top: -12px;
        margin-bottom: 12px;
        display: block;
    }

    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
        padding: 10px 15px;
        margin-bottom: 18px;
        border-radius: 6px;
    }
</style>

<div class="login-card">
    <h4>Forgot your password?</h4>
    <p class="subtext">Enter your email address to receive a password reset link.</p>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

    <form asp-action="ForgotPassword" method="post" novalidate>
        <div>
            <label asp-for="EmailAdress">Email address</label>
            <input asp-for="EmailAdress" class="form-control" placeholder="example@gmail.com" />
            <span asp-validation-for="EmailAdress" class="validation-message"></span>
        </div>

        <button type="submit" class="btn-login">Send reset link</button>
    </form>
</div>
